{
  "name": "storybook-addon-tag-badges",
  "version": "0.0.0-semantically-released",
  "description": "Display Storybook tags as badges in the sidebar and toolbar.",
  "keywords": [
    "storybook-addon",
    "storybook",
    "badges",
    "tags",
    "organize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sidnioulz/storybook-addon-tag-badges.git"
  },
  "type": "module",
  "author": "Steve Dodier-Lazaro <sidnioulz@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./manager-helpers": "./dist/manager-helpers.js",
    "./manager": "./dist/manager.js",
    "./preview": {
      "types": "./dist/index.d.ts",
      "default": "./dist/preview.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "manager.js",
    "preview.js"
  ],
  "bundler": {
    "managerEntries": [
      "src/manager.tsx",
      "src/manager-helpers.ts"
    ],
    "nodeEntries": [],
    "previewEntries": [
      "src/preview.ts",
      "src/index.ts"
    ]
  },
  "scripts": {
    "build": "tsup",
    "build:storybook": "storybook build",
    "build:watch": "pnpm build --watch",
    "clean": "rimraf ./dist",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "pack": "pnpm pack --out storybook-addon-tag-badges-$(date +%s).tgz",
    "prebuild": "pnpm clean",
    "prepare": "husky",
    "prerelease": "zx scripts/prepublish-checks.js",
    "release": "pnpm build && pnpm semantic-release",
    "release:canary": "pnpm build && auto canary",
    "start": "run-p build:watch \"storybook --quiet\"",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@storybook/addon-docs": "next",
    "@storybook/addon-vitest": "next",
    "@storybook/icons": "^1.4.0",
    "@storybook/react-vite": "next",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser": "4.0.4",
    "@vitest/coverage-istanbul": "4.0.4",
    "auto": "^11.3.0",
    "boxen": "^8.0.1",
    "commitlint": "^20.1.0",
    "dedent": "^1.7.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "storybook": "next",
    "tosource": "2.0.0-alpha.3",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.7",
    "vitest": "^4.0.4",
    "zx": "^8.8.5"
  },
  "peerDependencies": {
    "storybook": "^10.0.0"
  },
  "resolutions": {
    "@octokit/core": "^7",
    "@octokit/request-error": "^7",
    "@octokit/request": "^10",
    "@octokit/plugin-paginate-rest": "^13"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">=20"
  },
  "storybook": {
    "displayName": "Tag Badges",
    "supportedFrameworks": [
      "supported-frameworks"
    ],
    "icon": "https://raw.githubusercontent.com/Sidnioulz/storybook-addon-tag-badges/main/static/icon.png"
  },
  "pnpm": {
    "overrides": {
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11"
    }
  }
}
